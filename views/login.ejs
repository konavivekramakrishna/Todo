<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="grid grid-cols-6">
        <div class="col-start-3 col-span-2">
            <%- include('header.ejs') %>
            <h6 class="py-4">Login to your account</h6>
            <form action="/sessions"  method="post">
                <div class="py-3">
                <label for="firstName">email</label>
                <input type="email" name="email" class="border border-gray-300 text-gray-900 rounded p-2 w-full">
                </div>
                <div class="py-3">
                <label for="firstName">password</label>
                <input type="password" name="password" class="border border-gray-300 text-gray-900 rounded p-2 w-full">
                </div>
                <div class="py-3">
                <button type="submit"  class="bg-green-600 text-white font-medium rounded p-2">Sign Up</button>
                </div>
            </form>
            <%- include('notifications.ejs') %>
        </div>
    </div>
</body>
</html>